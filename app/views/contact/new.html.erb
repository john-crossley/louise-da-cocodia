<div class="page">

	<%= image_tag 'http://placehold.it/920x300' %>

	<div class="sub_heading">
		<h2> Contact Louise Da-Cocodia </h2>
		<span class="line"></span>
	</div><!--//sub_heading-->

	<div class="contact row">

		<div class="eight columns">
			<p>
				If you would like to contact the <strong>Louise Da-Cocodia Foundation</strong> you can either use the form below to contact one of the foundation trustees, or you could simply use the address located in the footer of our website.
			</p>

			<%= form_for(:message, url: dispatch_email_path, method: :post) do |f| %>
				<fieldset>
					<p>
						<%= f.label :name %>
						<%= f.text_field :name %>
					</p>
					<p>
						<%= f.label :email %>
						<%= f.text_field :email %>
					</p>
					<p>
						<%= f.label :message %>
						<%= f.text_area :message %>
					</p>
					<p>
						<%= f.button 'Contact', class: 'button' %>
					</p>
				</fieldset>
			<% end %>
		</div><!--//eight columns-->

		<!-- Google iFrame
		This will load Google maps into the contact page.
		-->
		<div class="five columns">
			<iframe width="420" height="420" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.uk/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=M16+7EA&amp;sll=52.8382,-2.327815&amp;sspn=7.914514,21.555176&amp;ie=UTF8&amp;hq=&amp;hnear=Manchester+M16+7EA,+United+Kingdom&amp;t=m&amp;z=14&amp;ll=53.455043,-2.25651&amp;output=embed"></iframe>

	</div><!--//five columns-->

</div><!--//page-->