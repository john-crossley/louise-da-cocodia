<nav role="navigation">
	<ul>
		<li <%= raw "class='current'" if params[:controller] == 'home' %> >
			<%= link_to 'Home', root_path, title: 'The home page' %>
		</li>
		<li <%= raw "class='current'" if params[:controller] == 'about' && params[:action] != 'history' %>>
			<%= link_to 'About', about_path, title: 'About us page' %>
			<ul>
				<li><%= link_to 'Donate', about_donate_path, title: 'Donation page' %></li>
				<li><%= link_to 'Objectives', about_objectives_path, title: 'Our objectives page' %></li>
				<li><%= link_to 'Volunteering', about_volunteering_path, title: 'Volunteering page' %></li>
				<li> <%= link_to 'History', about_history_path %> </li>
			</ul>
		</li>
		<li <%= raw "class='current'" if params[:controller] == 'posts' %>>
      <%= link_to 'Blog', blog_path, title: 'The blog page' %>
		</li>
		<li <%= raw "class='current'" if params[:controller] == 'contact' %>>
			<%= link_to 'Contact', contact_path, title: 'Contact us page' %>
		</li>
		<!--<%= "current" if params[:controller] == 'sessions' %>-->
		<li class="right">
			<% if logged_in? %>
				<%= link_to "#{current_user.username}", '#' %>
				<ul>
					<li> <%= link_to 'My Account', edit_user_path(current_user), 'My accounts page' %> </li>
					<li> <%= link_to 'Create new post', blog_new_path, title: 'Create a new post page' %> </li>
					<li> <%= link_to 'Create new event', new_event_path, title: 'Create a new event page' %> </li>
					<li> <%= link_to 'Create a user', new_user_path, 'Create a new user page' %> </li>
					<li> <%= link_to 'Logout', logout_path, method: :delete, title: 'Logout of the application' %> </li>
				</ul>
			<% else %>
				<%= link_to 'Login', login_path %>
			<% end %>
		</li>
	</ul>
</nav>
