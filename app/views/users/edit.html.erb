<div class="page container">

  <div class="register-section">

    <h2> Editing: <%= current_user.username.capitalize %>'s account </h2>

    <p class="note">
      To change your account details use the form below.
    </p>

    <%= form_for(@user) do |f| %>
    <%= render 'common/form_errors', obj: @user %>
      <p>
        <%= f.label :fullname, 'Full Name' %>
        <%= f.text_field :fullname %>
      </p>
      <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p class="warning">Leave password fields black if you
      do not wish to change them.</p>
      </p>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation, 'Password Confirmation' %>
        <%= f.password_field :password_confirmation %>
      </p>
      <p>
        <%= f.button 'Update', class: 'button' %>
      </p>
    <% end %>

  </div><!--//register-section-->

</div><!--//page-->