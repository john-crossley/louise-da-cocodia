<h1> Register </h1>

<%= form_for(@user) do |f| %>
	<%= render 'common/form_errors', obj: @user %>
	<p>
		<%= f.label :fullname, 'Full Name' %><br>
		<%= f.text_field :fullname %>
	</p>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit "Register" %>
	</p>
<% end %>